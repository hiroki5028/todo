<p id="notice"><%= notice %></p>

<h1>Tasks By Category</h1>
<div>
  <table class="show">
  	<tr>
  		<th scope="row">Category</th>
  		<td><%= @category.title %></td>
  	</tr>
  </table>
</div>

<%= render "pages/list", tasks: @tasks %>

<div class="link">
  <div class="edit">
    <%= link_to 'Edit', edit_category_path(@category) %>
  </div>

  <div class="back">
    <%= link_to 'Back', :back %>
  </div>
</div>
